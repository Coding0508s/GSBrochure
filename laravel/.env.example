APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# 로컬 개발: sqlite 사용 (PostgreSQL 설치 불필요)
DB_CONNECTION=sqlite

# 배포(Contabo 등): MySQL 사용 시 아래 주석 해제 후 값 설정
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=brochure_db
# DB_USERNAME=brochure_user
# DB_PASSWORD=

# PostgreSQL 사용 시 (Railway 등)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Microsoft Teams 알림 (물류창고 담당자 채널 Incoming Webhook URL)
# TEAMS_WEBHOOK_URL=

# Solapi 문자 인증 (브로셔 신청 전화번호 인증) https://console.solapi.com/credentials
# SOLAPI_API_KEY=
# SOLAPI_API_SECRET=
# SOLAPI_FROM=01012345678

# Solapi 카카오 알림톡 (설정 시 알림톡 템플릿 사용, 미설정 시 SMS 발송)
# SOLAPI_KAKAO_PF_ID=카카오톡 채널 ID (플러스친구 ID)
# SOLAPI_KAKAO_OTP_TEMPLATE_ID=인증번호(OTP) 알림톡 템플릿 ID
# SOLAPI_KAKAO_OTP_VARIABLE=#{인증번호}
# (선택) 템플릿 치환변수 키. 기본값 #{인증번호}. 템플릿에 맞게 변경 가능
